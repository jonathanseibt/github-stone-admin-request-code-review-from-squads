  "engines": {
    "node": "^18",
    "pnpm": "^8"
  },
  "scripts": {
    "prepare": "is-ci || husky install",
    "lint": "pnpm lint:prettier & pnpm lint:eslint & pnpm lint:tsc",
    "lint:prettier": "prettier . --write --log-level error",
    "lint:eslint": "eslint . --fix --ext .ts --max-warnings 0",
    "lint:tsc": "tsc --noEmit",
    "build": "pnpm dlx esbuild src/*.ts --outdir=build --allow-overwrite --minify --banner:js=\"$(pnpm dlx cross-cat src/tampermonkey.txt)\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "eslint": "8.51.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  }
}
